- title 'Login'

.box
  %h2 Login

  = form_for resource, :as => resource_name, :url => login_path do |f|
    %table.form
      %tr
        %td.l= f.label :email
        %td= f.text_field :email
      %tr
        %td.l= f.label :password
        %td
          = f.password_field :password
          - if devise_mapping.recoverable?
            = link_to 'Esqueceu a senha?', recover_password_path, :id => 'forgot_password'
      - if devise_mapping.rememberable?
        %tr
          %td &nbsp;
          %td
            = f.check_box :remember_me
            = f.label :remember_me, nil, :id => 'remember_me_label'
      %tr
        %td &nbsp;
        %td= f.submit 'Login'
