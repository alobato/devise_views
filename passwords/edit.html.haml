- title 'Alterar senha'

.box
  %h2 Alterar senha

  = form_for resource, :as => resource_name, :url => change_password_path, :html => { :method => :put } do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %table.form
      %tr
        %td.l= f.label :password
        %td= f.password_field :password
      %tr
        %td.l= f.label :password_confirmation
        %td= f.password_field :password_confirmation
      %tr
        %td
          &nbsp;
        %td= f.submit 'Alterar senha'
